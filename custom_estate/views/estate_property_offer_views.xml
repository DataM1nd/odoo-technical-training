<?xml version="1.0"?>
<odoo>
    <!-- estate.property.offer: tree/list view -->
    <record id="custom_estate_estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- estate.property.offer: form view -->
    <record id="custom_estate_estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>